<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.jbehave</groupId>
    <artifactId>jbehave-examples</artifactId>
    <version>3.4-SNAPSHOT</version>
  </parent>
  <artifactId>jbehave-trader-example</artifactId>
  <name>JBehave Trader Example</name>

  <properties>
    <skip>false</skip>
    <meta.filter></meta.filter>
  </properties>

 <dependencies>
    <dependency>
      <groupId>org.jbehave</groupId>
      <artifactId>jbehave-ant</artifactId>
      <version>${project.version}</version>
    </dependency>
  </dependencies>
  
  <build>
    <plugins>
      <plugin>
        <groupId>org.jbehave</groupId>
        <artifactId>jbehave-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>embeddable-stories</id>
            <phase>integration-test</phase>
            <configuration>
              <includes>
                <include>**/TraderStories.java</include>
              </includes>
              <excludes />
              <skip>${skip}</skip>
              <batch>false</batch>
              <generateViewAfterStories>true</generateViewAfterStories>
              <ignoreFailureInStories>true</ignoreFailureInStories>
              <ignoreFailureInView>true</ignoreFailureInView>
              <threads>2</threads>
              <metaFilters>
                <metaFilter>${meta.filter}</metaFilter>
              </metaFilters>
            </configuration>
            <goals>
              <goal>run-stories-as-embeddables</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>ant</id>
      <properties>
        <skip>true</skip>
      </properties>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <id>run-via-ant</id>
                <phase>integration-test</phase>
                <configuration>
                  <tasks>
                    <taskdef name="runStoriesAsEmbeddables"
                      classname="org.jbehave.ant.RunStoriesAsEmbeddables"
                      classpathref="maven.runtime.classpath" />
                    <runStoriesAsEmbeddables
                      includes="**/stories/*.java" skip="false"
                      generateViewAfterStories="true"
                      ignoreFailureInStories="true" ignoreFailureInView="true" />
                  </tasks>
                </configuration>
                <goals>
                  <goal>run</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

</project>
