<!--
    Note: Requires maven-ant-tasks-2.1.jar in $ANT_HOME/lib
          Download it from http://maven.apache.org/ant-tasks/download.html
  -->
<project name="jbehave-dependencies" default="copy-dependencies" xmlns:artifact="antlib:org.apache.maven.artifact.ant">

	<target name="copy-dependencies">
		<artifact:pom id="pom" file="pom.xml" />
		<artifact:dependencies filesetId="dependency.fileset" pomRefId="pom" useScope="test" />

		<copy todir=".">
			<fileset refid="dependency.fileset" />
			<mapper type="flatten" />
		</copy>
	</target>

</project>